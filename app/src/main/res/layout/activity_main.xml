<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:background="@drawable/menubg">
   
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:text="Welcome back,"
        android:textColor="#070707"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:height="50dp"
        android:paddingLeft="20dp"
        android:text="Nabila Tasnia"
        android:textColor="#070707"
        android:textSize="40dp" />

    <LinearLayout

        android:layout_height="170dp"
        android:layout_width="380dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"

        android:background="@drawable/solidbg"
        android:layout_below="@id/text2"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"

        android:layout_marginTop="15dp"
        android:paddingLeft="50dp"
        android:paddingTop="30dp"
        android:text="Your balance is"
        android:textColor="#F4F1F1"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:paddingLeft="50dp"
        android:text="300$"
        android:textColor="#FAFAFA"
        android:textSize="60dp" />

    />





    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/text4"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:paddingLeft="50dp">

        <Button
            android:id="@+id/income"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/income"
            android:drawableTint="@color/black"

            android:text="Income"
            android:textSize="18sp"
            android:textColor="@color/black"

            app:backgroundTint="#64C6BE" />

        <Button
            android:id="@+id/budget"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/budget"
            android:drawableTint="@color/black"
            android:text="Budget"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:backgroundTint="#64C6BE" />

        <Button
            android:id="@+id/report"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/report"
            android:drawableTint="@color/black"
            android:text="Report"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:backgroundTint="#64C6BE" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="500dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/text4"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:paddingLeft="30dp">

        <Button
            android:id="@+id/expense"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/expense"
            android:drawableTint="@color/black"
            android:text="Expense"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:backgroundTint="#64C6BE" />

        <Button
            android:id="@+id/status"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/moneystatus"
            android:drawableTint="@color/black"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="#64C6BE" />


        <Button
            android:id="@+id/donate"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/donate"
            android:drawableTint="@color/black"
            android:text="Donate"
            android:textColor="@color/black"
            android:textSize="18sp"

            app:backgroundTint="#64C6BE" />

    </LinearLayout>

</RelativeLayout>