<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F6"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingLeft="50dp">

        <Button
            android:id="@+id/income"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/income"
            android:drawableTint="@color/white"

            android:text="Income"
            android:textSize="18dp"

            app:backgroundTint="#202F81" />

        <Button
            android:id="@+id/budget"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/budget"
            android:drawableTint="@color/white"
            android:text="Budget"
            android:textSize="18dp"
            app:backgroundTint="#202F81" />

        <Button
            android:id="@+id/report"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/report"
            android:drawableTint="@color/white"
            android:text="Report"
            android:textSize="18dp"
            app:backgroundTint="#202F81" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:paddingLeft="30dp">

        <Button
            android:id="@+id/expense"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/expense"
            android:drawableTint="@color/white"
            android:text="Expense"
            android:textSize="18dp"
            app:backgroundTint="#202F81" />

        <Button
            android:id="@+id/status"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/moneystatus"
            android:drawableTint="@color/white"
            android:text="Status"
            android:textSize="18dp"
            app:backgroundTint="#202F81" />


        <Button
            android:id="@+id/donate"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/donate"
            android:drawableTint="@color/white"
            android:text="Donate"
            android:textSize="18dp"

            app:backgroundTint="#202F81" />

    </LinearLayout>

</RelativeLayout>