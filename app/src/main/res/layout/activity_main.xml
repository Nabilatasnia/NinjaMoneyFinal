<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/menubg"
        tools:context=".MainActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/text1"
            android:layout_below="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="Welcome back,"
            android:textColor="#474545"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:height="50dp"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="#070707"
            android:textSize="40dp" />

        <LinearLayout

            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_centerInParent="true"

            android:layout_marginTop="20dp"
            android:background="@drawable/solidbg"
            android:gravity="center"
            android:paddingStart="100dp">

        </LinearLayout>


        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginTop="30dp"
            android:height="50dp"
            android:paddingLeft="40dp"
            android:paddingTop="30dp"
            android:text="Your balance is"
            android:textColor="#F4F1F1"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:paddingLeft="40dp"
            android:text="300à§³"
            android:textColor="#FAFAFA"
            android:textSize="55dp" />


        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="500dp"
            android:layout_below="@+id/text4"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingTop="60dp">

            <Button
                android:id="@+id/income"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/income"
                android:drawableTint="@color/black"

                android:paddingTop="10dp"
                android:shadowDx="4"
                android:shadowDy="25"
                android:text="Income"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:backgroundTint="#64C6BE"
                app:cornerRadius="10dp"
                app:iconPadding="10dp" />

            <Button
                android:id="@+id/budget"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/budget"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="Budget"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:backgroundTint="#64C6BE"
                app:cornerRadius="10dp"
                app:iconPadding="10dp" />

            <Button
                android:id="@+id/report"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/report"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="Report"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:backgroundTint="#64C6BE"
                app:cornerRadius="10dp"
                app:iconPadding="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="500dp"
            android:layout_below="@+id/text4"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="0dp"

            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="60dp">

            <Button
                android:id="@+id/expense"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/expense"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="Expense"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:backgroundTint="#64C6BE"
                app:cornerRadius="10dp"
                app:iconPadding="10dp" />

            <Button
                android:id="@+id/status"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/moneystatus"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="Balance"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:backgroundTint="#64C6BE"
                app:cornerRadius="10dp"
                app:iconPadding="10dp" />

            <Button
                android:id="@+id/donate"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/donate"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="Donate"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:backgroundTint="#64C6BE"
                app:cornerRadius="10dp"
                app:iconPadding="10dp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
